{% extends 'base.html.twig' %}

{% block body %}
    <section class="container mt-4">
        <a href="{{ path('ekinotheque_home') }}">< Revenir à la liste</a>
        
        <div class="row mt-4 d-flex">
            <img src="{{ book.cover }}" class="h-100 col-2">

            <div class="col-10">
                {% include 'partial/book-availability.html.twig' with {available: book is available} %}
                <h1>{{ book.title }}</h1>
                <p>Mis à disposition par : {{ book.owner }}</p>

                <hr>

                <p>{{ book.description }}</p>

                <span class="font-weight-bold">
                    {% for category in book.categories %}
                        #{{ category }}
                    {% endfor %}
                </span>

                <div class="mx-auto my-4">
                    <a href="{{ path('ekinotheque_book_borrow', {bookId: book.id}) }}"
                       class="btn mr-4 shadow btn-primary">
                        Emprunter le livre
                    </a>
                </div>
            </div>

        </div>
    </section>

    <section class="container-fluid mt-4 bg-light">
        <div class="container">
            <h2 class="mb-4 pt-4">Historique d'emprunt</h2>

            <table class="table table-borderless table-hover mx-auto">
                <thead>
                    <tr>
                        <th>Prénom</th>
                        <th>Pseudo</th>
                        <th>Date d'emprunt</th>
                        <th>Date de retour</th>
                        <th>Type d'emprunt</th>
                    </tr>
                </thead>

                <tbody>
                    {% for borrowedBook in book.borrowedBooks %}
                        {% if borrowedBook.validationStatus == constant('App\\Entity\\BorrowedBook::STATUS_ACCEPTED') %}
                            <tr class="border-bottom">
                                <td>{{ borrowedBook.user.firstname }}</td>
                                <td>{{ borrowedBook.user.username }}</td>
                                <td>{{ borrowedBook.borrowingDate | date('d-m-Y') }}</td>
                                <td>{{ borrowedBook.returnDate | date('d-m-Y') }}</td>
                                <td>{{ borrowedBook.reservation }}</td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>

    </section>
{% endblock %}
